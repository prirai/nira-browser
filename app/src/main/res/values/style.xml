<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <style
        name="AppThemeNotActionBar"
        parent="Theme.Material3.DayNight.NoActionBar"
    >
        <!-- Material 3 Color System -->
        <item name="colorPrimary">@color/m3_primary</item>
        <item name="colorOnPrimary">@color/m3_on_primary</item>
        <item name="colorPrimaryContainer">@color/m3_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/m3_on_primary_container</item>
        
        <item name="colorSecondary">@color/m3_secondary</item>
        <item name="colorOnSecondary">@color/m3_on_secondary</item>
        <item name="colorSecondaryContainer">@color/m3_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/m3_on_secondary_container</item>
        
        <item name="colorTertiary">@color/m3_tertiary</item>
        <item name="colorOnTertiary">@color/m3_on_tertiary</item>
        <item name="colorTertiaryContainer">@color/m3_tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/m3_on_tertiary_container</item>
        
        <item name="colorError">@color/m3_error</item>
        <item name="colorOnError">@color/m3_on_error</item>
        <item name="colorErrorContainer">@color/m3_error_container</item>
        <item name="colorOnErrorContainer">@color/m3_on_error_container</item>
        
        <item name="colorSurface">@color/m3_surface</item>
        <item name="colorOnSurface">@color/m3_on_surface</item>
        <item name="colorSurfaceVariant">@color/m3_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/m3_on_surface_variant</item>
        <item name="colorSurfaceContainerLow">@color/m3_surface_container_low</item>
        <item name="colorSurfaceContainer">@color/m3_surface_container</item>
        <item name="colorSurfaceContainerHigh">@color/m3_surface_container_high</item>
        <item name="colorSurfaceContainerHighest">@color/m3_surface_container_highest</item>
        
        <item name="android:colorBackground">@color/m3_background</item>
        <item name="colorOnBackground">@color/m3_on_background</item>
        
        <item name="colorOutline">@color/m3_outline</item>
        <item name="colorOutlineVariant">@color/m3_outline_variant</item>
        
        <!-- Legacy color support -->
        <item name="colorAccent">?attr/colorPrimary</item>
        
        <!-- System bars -->
        <item name="android:statusBarColor">@color/m3_surface_container</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Bottom sheet -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        
        <!-- Material 3 Shape Overrides -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Material3.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Material3.LargeComponent</item>
        
        <!-- Material 3 Button Styles -->
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Material3.Button.OutlinedButton</item>
        
        <!-- Material 3 Card Style -->
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>
        
        <!-- Material 3 Checkbox and Switch -->
        <item name="checkboxStyle">@style/Widget.Material3.CompoundButton.CheckBox</item>
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>
        
        <!-- Material 3 FAB -->
        <item name="floatingActionButtonStyle">@style/Widget.Material3.FloatingActionButton.Primary</item>
        
        <!-- Material 3 Text Input -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/statusbar_background</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- WebApp Theme for PWAs - No Chrome, but with status bar -->
    <style name="WebAppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppThemeAddons" parent="Theme.Material3.DayNight">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/LightActionBar</item>
        <item name="android:statusBarColor">@color/statusbar_background</item>

        <item
            name="mozac_primary_text_color"
        >?android:attr/textColorPrimary</item>
    </style>

    <style name="SearchDialogStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
        <!-- Material 3 dynamic colors will be inherited from parent theme -->
        <item name="colorPrimary">@color/m3_primary</item>
        <item name="colorOnPrimary">@color/m3_on_primary</item>
        <item name="colorPrimaryContainer">@color/m3_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/m3_on_primary_container</item>
        <item name="colorSurface">@color/m3_surface</item>
        <item name="colorOnSurface">@color/m3_on_surface</item>
        <item name="colorSurfaceVariant">@color/m3_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/m3_on_surface_variant</item>
        <item name="android:colorControlNormal">?attr/colorOnSurfaceVariant</item>
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
        <item name="android:colorControlHighlight">?attr/colorPrimaryContainer</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Material Button Toggle Group Style -->
        <item name="materialButtonToggleGroupStyle">@style/Widget.App.Button.ToggleGroup</item>
    </style>

    <!-- Custom Toggle Group Style for Segmented Buttons -->
    <style name="Widget.App.Button.ToggleGroup" parent="Widget.Material3.MaterialButtonToggleGroup">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/m3_outline_variant</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="AppThemeSettings" parent="AppThemeAddons">
        <item
            name="preferenceTheme"
        >@style/PreferenceThemeOverlay.Material3</item>
        <item name="android:listDivider">@null</item>
    </style>

    <!-- Modern Preference Styles -->
    <style
        name="PreferenceThemeOverlay.Material3"
        parent="PreferenceThemeOverlay.v14.Material"
    >
        <item
            name="preferenceCategoryStyle"
        >@style/Preference.Category.Material3</item>
        <item name="preferenceStyle">@style/Preference.Material3</item>
        <item
            name="switchPreferenceCompatStyle"
        >@style/Preference.SwitchPreferenceCompat.Material3</item>
    </style>

    <style name="Preference.Category.Material3" parent="Preference.Category">
        <item name="android:layout">@layout/preference_category_material3</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">true</item>
    </style>

    <style name="Preference.Material3" parent="Preference">
        <item name="android:layout">@layout/preference_material3</item>
    </style>

    <style
        name="Preference.SwitchPreferenceCompat.Material3"
        parent="Preference.SwitchPreferenceCompat"
    >
        <item name="android:layout">@layout/preference_material3</item>
        <item name="android:widgetLayout">@layout/preference_widget_material_switch</item>
    </style>

    <style
        name="LightActionBar"
        parent="@style/ThemeOverlay.MaterialComponents.ActionBar"
    >
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style
        name="ExtensionPopupTabletStyle"
        parent="@android:style/Animation.Activity"
    >
        <item
            name="android:windowEnterAnimation"
        >@anim/extension_popup_tablet_in</item>
        <item
            name="android:windowExitAnimation"
        >@anim/extension_popup_tablet_out</item>
    </style>

    <style
        name="AppBottomSheetDialogTheme"
        parent="Theme.Material3.DayNight.BottomSheetDialog"
    >
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet</item>
    </style>
    
    <!-- Material 3 Shape Appearances -->
    <style name="ShapeAppearance.Material3.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.Material3.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.Material3.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.Material3.Corner.ExtraLarge" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <!-- Fullscreen Dialog Theme -->
    <style name="FullScreenDialogTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>
