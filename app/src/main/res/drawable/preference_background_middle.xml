<?xml version="1.0" encoding="utf-8"?>
<!-- Material 3 preference background - middle item with minimal divider -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainer"/>
        </shape>
    </item>
    
    <!-- Top divider line for separation between items -->
    <item android:top="0dp" android:height="0.5dp">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorOutlineVariant"/>
        </shape>
    </item>
</layer-list>
