<?xml version="1.0" encoding="utf-8" ?>
<!-- Material 3 URL field background - different from container -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Use elevated surface color for the URL field -->
    <solid android:color="?attr/colorSurfaceContainer" />

    <!-- Thin stroke for definition -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorOutlineVariant" />

    <corners android:radius="12dp" />
</shape>
