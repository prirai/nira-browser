<?xml version="1.0" encoding="utf-8"?>
<!--
    Override for Material3 color that causes crashes on some Android devices.
    
    Issue: The Material library's version references @dimen/material_emphasis_disabled
    in android:alpha, which isn't supported by some Android versions' LayoutInflater
    when loading StateListDrawables. This also causes circular reference issues with
    theme attributes.
    
    Fix: Use hardcoded color values and alpha to avoid both issues.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state - 38% opacity primary text color -->
    <item android:state_enabled="false" android:alpha="0.38" android:color="#212121"/>
    <!-- Default state - secondary text color -->
    <item android:color="#757575"/>
</selector>
