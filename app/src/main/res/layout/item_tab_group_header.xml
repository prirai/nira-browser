<?xml version="1.0" encoding="utf-8"?>
<!-- Tab Group Header Layout for Tabs List -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
    >

        <!-- Group Icon -->
        <ImageView
            android:id="@+id/group_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_tab_group"
            android:contentDescription="@string/tab_group"
            app:tint="?android:attr/textColorSecondary"
        />

        <!-- Group Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
        >

            <!-- Group Name -->
            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_group"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:maxLines="1"
                android:ellipsize="end"
            />

        </LinearLayout>

        <!-- Tab Count Badge -->
        <TextView
            android:id="@+id/tab_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/badge_background"
            android:text="3"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
        />

        <!-- Expand/Collapse Icon -->
        <ImageView
            android:id="@+id/expand_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_chevron_down"
            android:contentDescription="@string/expand_collapse"
            app:tint="?android:attr/textColorSecondary"
        />

    </LinearLayout>

</androidx.cardview.widget.CardView>
