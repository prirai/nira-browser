<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/islandHeaderCard"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?android:attr/colorBackground"
>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:minWidth="80dp"
    >

        <!-- Colored vertical pill indicator on the left -->
        <View
            android:id="@+id/islandColorIndicator"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@android:color/holo_blue_light"
        />

        <!-- Island name -->
        <TextView
            android:id="@+id/islandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:text="@string/island_name"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="sans-serif-medium"
            android:maxLength="20"
            android:singleLine="true"
            android:ellipsize="end"
        />

        <!-- Collapse/Expand button -->
        <ImageView
            android:id="@+id/islandCollapseButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_expand_less"
            android:contentDescription="@string/collapse_or_expand_island"
            android:scaleType="centerInside"
            app:tint="?android:attr/textColorSecondary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
