<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
>

    <!-- Vertical separator (shown before each tab except first) -->
    <View
        android:id="@+id/tabSeparator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="6dp"
        android:background="?android:attr/textColorSecondary"
        android:alpha="0.15"
        android:visibility="gone"
    />

    <!-- Tab content without borders -->
    <LinearLayout
        android:id="@+id/tabPillContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:minWidth="100dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
    >

        <!-- Favicon -->
        <ImageView
            android:id="@+id/tabFavicon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="Tab favicon"
            android:scaleType="centerCrop"
        />

        <!-- Title -->
        <TextView
            android:id="@+id/tabTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLength="15"
            android:maxLines="1"
            android:text="Tab Title"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp"
        />

    </LinearLayout>

</LinearLayout>
