<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Handle indicator for bottom sheet -->
    <View
        android:id="@+id/dragHandle"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="?android:attr/textColorSecondary" />

    <!-- New Tab Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/newTabButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dragHandle"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/new_tab"
        android:drawableStart="@drawable/ic_round_add"
        android:drawablePadding="8dp"
        style="@style/Widget.Material3.Button.TonalButton" />

    <!-- Tabs RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tabsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/newTabButton"
        android:layout_above="@id/profileChipScrollView"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never" />

    <!-- Empty state when no tabs -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/newTabButton"
        android:layout_above="@id/profileChipScrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_tabs"
            android:alpha="0.6"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/no_tabs_message"
            app:tint="?android:attr/textColorSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_tabs_message"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_tabs_description"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:textAlignment="center"
            android:layout_marginHorizontal="24dp" />

    </LinearLayout>

    <!-- Profile mode chips at bottom -->
    <HorizontalScrollView
        android:id="@+id/profileChipScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="?attr/colorSurfaceVariant"
        android:paddingVertical="8dp">
        
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/profileChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:chipSpacing="8dp" />
            
    </HorizontalScrollView>

</RelativeLayout>