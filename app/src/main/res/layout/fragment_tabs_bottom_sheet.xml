<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface">

        <!-- Handle indicator for bottom sheet -->
        <View
            android:id="@+id/dragHandle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/drag_handle_background" />

        <!-- View mode switcher (List/Grid) -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/viewModeSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/dragHandle"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedButton="@id/listViewButton">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/listViewButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_view_list"
                app:iconPadding="0dp"
                android:contentDescription="List View" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gridViewButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_view_grid"
                app:iconPadding="0dp"
                android:contentDescription="Grid View" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Tabs List RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tabsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/viewModeSwitcher"
            android:layout_above="@id/profileButtonContainer"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <!-- Tabs Grid RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tabsGridRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/viewModeSwitcher"
            android:layout_above="@id/profileButtonContainer"
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:visibility="gone" />

        <!-- Empty state when no tabs -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/viewModeSwitcher"
            android:layout_above="@id/profileButtonContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_tabs"
                android:alpha="0.6"
                android:layout_marginBottom="16dp"
                android:contentDescription="No tabs"
                app:tint="?android:attr/textColorSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tabs open"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a new tab to get started"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:textAlignment="center"
                android:layout_marginHorizontal="24dp" />

        </LinearLayout>

        <!-- Merged Profile Buttons Container -->
        <HorizontalScrollView
            android:id="@+id/profileButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="16dp"
            android:paddingTop="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="@drawable/rounded_bottom_sheet"
            android:backgroundTint="@color/m3_surface_container_high"
            android:elevation="8dp">
            
            <LinearLayout
                android:id="@+id/profileButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
                
        </HorizontalScrollView>

    </RelativeLayout>

    <!-- FAB Container with grouped styling -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="120dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Extended FAB for search (left side) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/searchTabFab"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Search"
                android:textColor="?attr/colorOnPrimaryContainer"
                app:icon="@drawable/ic_search"
                app:iconTint="?attr/colorOnPrimaryContainer"
                app:backgroundTint="?attr/colorPrimaryContainer"
                app:cornerRadius="28dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="20dp"
                android:paddingEnd="12dp" />

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="?attr/colorOnPrimaryContainer"
                android:alpha="0.2" />

            <!-- FAB for new tab (right side) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/newTabFab"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="New Tab"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="20dp"
                app:icon="@drawable/ic_round_add"
                app:iconTint="?attr/colorOnPrimaryContainer"
                app:backgroundTint="?attr/colorPrimaryContainer"
                app:cornerRadius="28dp"
                android:contentDescription="New tab" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
