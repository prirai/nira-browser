<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Handle indicator for bottom sheet -->
        <View
            android:id="@+id/dragHandle"
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/drag_handle_background" />

        <!-- Tabs RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tabsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/dragHandle"
            android:layout_above="@id/profileChipScrollView"
            android:layout_marginTop="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            android:overScrollMode="never" />

        <!-- Empty state when no tabs -->
        <LinearLayout
            android:id="@+id/emptyStateLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/dragHandle"
            android:layout_above="@id/profileChipScrollView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_tabs"
                android:alpha="0.6"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/no_tabs_message"
                app:tint="?android:attr/textColorSecondary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_tabs_message"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_tabs_description"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:textAlignment="center"
                android:layout_marginHorizontal="24dp" />

        </LinearLayout>

        <!-- Profile mode chips at bottom -->
        <HorizontalScrollView
            android:id="@+id/profileChipScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:background="?attr/colorSurfaceVariant"
            android:paddingVertical="8dp"
            android:elevation="4dp">
            
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/profileChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:chipSpacing="8dp" />
                
        </HorizontalScrollView>

    </RelativeLayout>

    <!-- FAB for new tab -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newTabFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="76dp"
        android:src="@drawable/ic_round_add"
        android:contentDescription="@string/new_tab"
        app:fabSize="normal"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>