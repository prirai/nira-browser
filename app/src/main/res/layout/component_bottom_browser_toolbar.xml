<?xml version="1.0" encoding="utf-8" ?>
<com.prirai.android.nira.components.toolbar.BottomToolbarContainerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbarContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
>



    <!-- Address Bar -->
    <mozilla.components.browser.toolbar.BrowserToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/browser_toolbar_height"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/address_bar_background"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:browserToolbarClearColor="?android:attr/textColorPrimary"
        app:browserToolbarInsecureColor="?android:attr/textColorPrimary"
        app:browserToolbarMenuColor="?android:attr/textColorPrimary"
        app:browserToolbarProgressBarGravity="top"
        app:browserToolbarSecureColor="?android:attr/textColorPrimary"
        app:browserToolbarTrackingProtectionAndSecurityIndicatorSeparatorColor="?android:attr/textColorSecondary"
    />

    <!-- Legacy ContextualBottomToolbar removed - now using ModernContextualToolbar in UnifiedToolbar -->

</com.prirai.android.nira.components.toolbar.BottomToolbarContainerView>
