<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/groupCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="@dimen/search_result_corner_radius"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/tab_group_stroke"
    app:cardBackgroundColor="@color/tab_group_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Colored top stripe -->
        <View
            android:id="@+id/colorStripe"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            tools:background="@color/purple_500" />

        <!-- Group header -->
        <LinearLayout
            android:id="@+id/groupHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground">

            <!-- Expand/Collapse icon -->
            <ImageView
                android:id="@+id/expandIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_expand_more"
                app:tint="?attr/colorOnSurfaceVariant"
                tools:ignore="ContentDescription" />

            <!-- Group name -->
            <TextView
                android:id="@+id/groupName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Work Tabs" />

            <!-- Tab count in circle -->
            <TextView
                android:id="@+id/tabCount"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:background="@drawable/circle_background"
                tools:text="5" />

            <!-- More options button -->
            <ImageView
                android:id="@+id/moreButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_more_vert"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                app:tint="?attr/colorOnSurfaceVariant"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <!-- Tabs in group (expandable) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groupTabsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingBottom="12dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
