<?xml version="1.0" encoding="utf-8"?>
<!-- Material 3 Web App Installation Dialog Layout -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp"
    android:backgroundTint="?attr/colorSurface">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- App Icon -->
    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/web_app_icon"
        android:src="@drawable/ic_language"
        app:tint="?attr/colorPrimary" />

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:text="@string/install_web_app" />

    <!-- App Description -->
    <TextView
        android:id="@+id/appDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:gravity="center"
        android:text="@string/install_web_app_profile_message" />

    <!-- Profile Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profileDropdownLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintEnabled="false">

        <AutoCompleteTextView
            android:id="@+id/profileDropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_profile"
            android:inputType="none"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="?attr/colorOnSurface"
            style="@style/Widget.Material3.Button.TextButton"
            android:minWidth="88dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <!-- Install Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/installButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/install"
            android:textColor="?attr/colorOnPrimary"
            style="@style/Widget.Material3.Button"
            app:cornerRadius="20dp"
            android:minWidth="88dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </LinearLayout>

</LinearLayout>

</com.google.android.material.card.MaterialCardView>
