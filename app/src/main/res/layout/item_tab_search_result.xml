<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    style="@style/Widget.Material3.CardView.Elevated"
    app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
    app:cardElevation="1dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/resultTypeIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_tab"
                android:contentDescription="@string/tabs"
                app:tint="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <!-- Chips at top (optional, for group info) -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/tabChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacing="4dp"
                    app:chipSpacingHorizontal="4dp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tabTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="@string/tab_title_placeholder"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- URL -->
                <TextView
                    android:id="@+id/tabUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="https://example.com"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/resultDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="64dp"
            android:background="?attr/colorOutlineVariant"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
