<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/colorBackground">

<LinearLayout
    android:id="@+id/customTabHeader"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:background="?android:attr/colorBackground"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:gravity="center_vertical">

    <!-- Close button -->
    <ImageButton
        android:id="@+id/customTabCloseButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_round_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/close"
        android:padding="12dp"
        app:tint="?android:attr/textColorPrimary" />

    <!-- Page info container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical">

        <!-- Page Title -->
        <TextView
            android:id="@+id/customTabTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- URL with "Powered by Nira" -->
        <TextView
            android:id="@+id/customTabUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/powered_by_nira"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="1"
            android:ellipsize="middle" />

    </LinearLayout>

    <!-- Three dot menu button -->
    <ImageButton
        android:id="@+id/customTabMenuButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_more_vert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/menu"
        android:tint="?android:attr/textColorPrimary"
        android:padding="12dp" />

</LinearLayout>
</FrameLayout>
