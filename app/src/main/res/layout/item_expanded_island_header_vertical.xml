<?xml version="1.0" encoding="utf-8" ?>
<!-- Expanded Island Header for Vertical Tabs List -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/island_header_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="0dp"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/island_header_top_background"
    android:elevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
>

    <!-- Color Indicator -->
    <View
        android:id="@+id/island_color"
        android:layout_width="4dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorAccent"
    />

    <!-- Island Icon -->
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_tab_group"
        android:contentDescription="@string/tab_island_name"
        app:tint="?android:attr/textColorSecondary"
    />

    <!-- Island Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
    >

        <!-- Island Name -->
        <TextView
            android:id="@+id/island_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Work"
        />

    </LinearLayout>

    <!-- Tab Count Badge -->
    <TextView
        android:id="@+id/island_tab_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:background="@drawable/badge_background"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        tools:text="5"
    />

    <!-- Collapse Icon -->
    <ImageView
        android:id="@+id/island_collapse_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_chevron_down"
        android:contentDescription="@string/expand_collapse"
        app:tint="?android:attr/textColorSecondary"
    />

</LinearLayout>
