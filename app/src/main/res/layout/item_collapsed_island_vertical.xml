<?xml version="1.0" encoding="utf-8" ?>
<!-- Collapsed Island Item for Vertical Tabs List -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collapsed_island_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
    >

        <!-- Color Indicator -->
        <View
            android:id="@+id/collapsed_island_color"
            android:layout_width="4dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@color/colorAccent"
        />

        <!-- Island Icon -->
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_tab_group"
            android:contentDescription="@string/tab_island_name"
            app:tint="?android:attr/textColorSecondary"
        />

        <!-- Island Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
        >

            <!-- Island Name -->
            <TextView
                android:id="@+id/collapsed_island_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Work"
            />

        </LinearLayout>

        <!-- Tab Count Badge -->
        <TextView
            android:id="@+id/collapsed_island_tab_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:background="@drawable/badge_background"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="5"
        />

        <!-- Expand Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_chevron_right"
            android:contentDescription="@string/expand_collapse"
            app:tint="?android:attr/textColorSecondary"
        />

    </LinearLayout>

</androidx.cardview.widget.CardView>
